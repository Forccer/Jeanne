{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "no-console": 0,
    "no-control-regex": 0,
    "no-alert": 1,
    "no-redeclare": 2,
    "no-useless-escape": 1,
    "no-inner-declarations": 0,
    "no-empty-pattern": 0,
    "array-bracket-spacing": [
      "warn",
      "never"
    ],
    "brace-style": [
      "warn",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-trailing-spaces": 1,
    "space-before-function-paren": ["warn", {
      "anonymous": "ignore",
      "named": "ignore",
      "asyncArrow": "always"
    }],
    "arrow-spacing": 1,
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ]
  },
  "extends": "eslint:recommended",
  "globals": {
    "moment": true
  }
}
